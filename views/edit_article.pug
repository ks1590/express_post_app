extends layout

block content
  h1 #{title}
  form(method="post", action="/article/edit/"+article._id)
    #form-group
      label タイトル:
      input.form-control(name="title", type="text", value=article.title)
    #form-group
      label 本文:
      textarea.form-control(name="body" rows="10")=article.body
    br
    input.btn.btn-primary(type="submit", value="保存")